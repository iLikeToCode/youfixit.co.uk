---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';

// Fallback image metadata for pages that don't provide an image.
const FallbackImage: ImageMetadata = {
	src: '/assets/blog-placeholder-1.svg',
	width: 1200,
	height: 630,
	format: 'svg'
};
import { SITE_TITLE } from '../consts';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = FallbackImage } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content="You Fix It!" />
<meta name="description" content="Free and helpful tech repair guides! This is for a school project and can be found fully open sourced in Github." />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="http://youfixit.co.uk/" />
<meta property="og:title" content="You Fix It!" />
<meta property="og:description" content="Free and helpful tech repair guides! This is for a school project and can be found fully open sourced in Github." />
<meta property="og:image" content="https://metatags.io/images/meta-tags.png" />

<!-- X (Twitter) -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="http://youfixit.co.uk/" />
<meta property="twitter:title" content="You Fix It!" />
<meta property="twitter:description" content="Free and helpful tech repair guides! This is for a school project and can be found fully open sourced in Github." />
<meta property="twitter:image" content="https://metatags.io/images/meta-tags.png" />

