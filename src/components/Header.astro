---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
const { current = '' } = Astro.props;
---


<header>
<div class="header">
    <a class="logo-link" href="/" aria-label="YouFixIt home">
        <img class="logo" src="/YouFixItLight.png" alt="You fix it">
    </a>
    <div class="topnav">
                
            <a class={current === 'home' ? 'active' : ''} href="/">Home</a>
     				<a class={current === 'about' ? 'active' : ''} href="/about">About</a>
      			<a class={current === 'guide' ? 'active' : ''} href="/guides">Guides</a>
            <input type="text" placeholder="Search..">
        </div>
    </div>
</header>
<style>
	@font-face {
    font-family: 'Milker';
    src: url('/fonts/MilkerRegular.woff') format('woff2'),
        url('/fonts/MilkerRegular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}
        *{
            font-family: 'Milker';
            font-weight: normal;
            font-style: normal;
        }
        *, *::before, *::after {
  box-sizing: border-box;
}
        html{
            scroll-behavior: smooth;
        }
        body{

            background-color: black;
            
        }
        h1{
            font-size: 2.5rem;
            color: rgb(155, 180, 192);
            padding-left: 20%;
            display: flex;
            margin-left: 10%;
            z-index: 2;
        }
        .header{
            display: flex;
            position: sticky;
            background-color: rgb(32, 32, 32);
            width: 100%;
            height: fit-content;
            text-align: left;
            justify-content: flex-start;
            align-items: center;
            gap: 1rem;
            margin: 0;
            top: 0;
            padding: 12px 24px;
            z-index: 50;
        }

   
        .logo-link {
            display: inline-flex;
            align-items: center;
            flex: 0 0 auto;
            text-decoration: none;
        }

        .logo {
            display: flex;
            height: 80px; 
            width: auto;
            max-width: 100%;
            object-fit: contain;
        }
        .topnav{
            position: relative;
            z-index: 1;
            display: flex;
            flex: 0 0 auto;
            margin-left: 1rem;
            text-align: center;
            justify-content: flex-end;
            align-items: center;
            gap: 12px;
        }
        .topnav a {
            display: inline-flex;
            align-items: center;
            color: rgb(255, 255, 255);
            text-align: center;
            padding: 10px 18px;
            text-decoration: none;
            font-size: 16px;
            border: solid 1px rgb(155, 180, 192);
            border-collapse: collapse;
            margin: 0 4px;
            border-radius: 6px;
        }

        
        .topnav a:hover {
            background-color: #ffffff;
            color:  black;
        }

        .topnav a.active {
            background-color: #3b3b3b;
            color: white;
        }
        .topnav input[type=text] {
            display: inline-block;
            padding: 15px 18px;
            height: inherit;
            font-size: 15px;
            border-radius: 6px;
            border: 1px solid #444;
            background: #222;
            color: #fff;
            min-width: 160px;
        }
        @media screen and (max-width: 1250px) {
            .header{
                flex-wrap: wrap;
                padding: 10px 16px;
            }
            .topnav {
                flex: 1 1 100%;
                justify-content: center;
                margin-top: 8px;
                padding-right: 0;
            }
            .logo {
                height: 48px;
            }
        }
      

        @media screen and (max-width: 600px) {
            .header{
                flex-wrap: wrap;
            }
             .header {
        flex-direction: column;
        gap: 12px;
        padding: 12px;
        align-items: stretch;
      }
      h1{
        margin-left: 38%;
      }
      .topnav {
        justify-content: center;
        flex-wrap: wrap;
      }
            .topnav a, .topnav input[type=text] {
                float: none;
                display: block;
                text-align: center;
                width: 100%;
                margin: 6px 0;
                padding: 10px 12px;
            }
            .topnav input[type=text] {
                border: 1px solid #ccc;
            }
        
            
        }
        p {
            color: white;
         }

</style>
