---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
const { current = '' } = Astro.props;
---


<header>
<div class="header">
            <h1>WeFixIt</h1>
            <div class="topnav">
                
            <a class={current === 'home' ? 'active' : ''} href="/">Home</a>
     				<a class={current === 'about' ? 'active' : ''} href="/about">About</a>
      			<a class={current === 'blog' ? 'active' : ''} href="/blog">Blog</a>
            <input type="text" placeholder="Search..">
        </div>
    </div>
</header>
<style>
	@font-face {
    font-family: 'Milker';
    src: url('../assets/MilkerRegular.woff') format('woff2'),
        url('../assets/MilkerRegular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}
        *{
            font-family: 'Milker';
            font-weight: normal;
            font-style: normal;
            
        }
        html{
            scroll-behavior: smooth;
        }
        body{

            background-color: black;
            
        }
        h1{
            
            color: rgb(155, 180, 192);
            padding-left: 20%;
            display: flex;
            margin-left: 10%;
            z-index: 2;
        }
        .header{
            display: flex;
            position: sticky;
            background-color: rgb(32, 32, 32);
            width: 100%;
            height:fit-content;
            text-align: left;
            justify-content: center; 
            align-items: center;
            gap: 20%;   
            margin: 0;
            position: sticky;   
            top: 0;
        }
        .topnav{
            
            position: relative;
            float: right;
            z-index: 1;
            justify-self: center;
            display: flex;
            flex: 1;
            text-align: center;
            margin-right: 35%;
            top: 0; 

            right: 0;
            align-self: center;
            

        }
        .topnav a {
            float: left;
            display: flex;
            color: rgb(255, 255, 255);
            text-align: center;
            padding: 15px 30px;
            text-decoration: none;
            font-size: 17px;
            border: solid 1px rgb(155, 180, 192);
            border-collapse: collapse;
            margin-top: 2%;
            margin-bottom: 2%;
        }

        
        .topnav a:hover {
            background-color: #ffffff;
            color:  black;
        }

        .topnav a.active {
            background-color: #3b3b3b;
            color: white;
        }
        .topnav input[type=text] {
            display: flex;

            float: right;
            padding: 10px 40px; 

            padding-top: 0;
            padding-bottom: 0;
            margin-top: 2%;
            margin-bottom: 2%;
            width: inherit;
            padding-right: 1px;
            border: none;
            margin-left: 16px;
            margin-right: 16px;
            font-size: 17px;
        }
        @media screen and (max-width: 1250px) {
            .header{
                flex-wrap: wrap;
            }
        .topnav {
    flex: 1 1 100%;     
    justify-content: center;
    margin-top: 8px;
    padding-right: 0;
    margin-right: 0;
  }

  .header h1 {
    margin-left: 0;
    padding-left: 0;
    flex: 0 0 auto;  
  }
  }
      

        @media screen and (max-width: 600px) {
            .header{
                flex-wrap: wrap;
            }
             .header {
        flex-direction: column;
        gap: 12px;
        padding: 12px;
        align-items: stretch;
      }
      h1{
        margin-left: 38%;
      }
      .topnav {
        justify-content: center;
        flex-wrap: wrap;
      }
            .topnav a, .topnav input[type=text] {
                float: none;
                display: block;
                text-align: left;
                width: 100%;
                margin: 0;
                padding: 14px;
            }
            .topnav input[type=text] {
                border: 1px solid #ccc;
            }
        
            
        }
        p {
            color: white;
         }

</style>
